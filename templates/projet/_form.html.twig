{{ form_start(form) }}
<div class="user-data full-width wow bounceInRight">
    <div class="about-left-heading">
        <h3>Ajout d'un nouveau projet</h3>
    </div>
    <div class="prsnl-info">
        <div class="row">
            <div class="col">
                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                            {{ message }}
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    {% endfor %}
                {% endfor %}
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="form-group">
                    <label>{{ form_label(form.theme)}}</label>
                    {{ form_widget(form.theme)}}
                    {{ form_errors(form.theme) }}
                </div>
            </div>
            <div class="col-lg-12">
                <div class="form-group">
                    <label>{{ form_label(form.deroule)}}</label>
                    {{ form_widget(form.deroule)}}
                    {{ form_errors(form.deroule) }}
                </div>
            </div>
            <div class="col-lg-6 col-md-6">
                <div class="form-group">
                    <label>{{form_label(form.dateDebut)}}</label>
                    {{ form_widget(form.dateDebut)}}
                    {{ form_errors(form.dateDebut) }}
                </div>
            </div>
            <div class="col-lg-6 col-md-6">
                <div class="form-group">
                    <label>{{ form_label(form.dateFin)}}</label>
                    {{ form_widget(form.dateFin)}}
                    {{ form_errors(form.dateFin) }}
                </div>
            </div>
            <div class="col-lg-4 col-md-6">
                <div class="form-group">
                    <label>{{form_label(form.branche)}}</label>
                    <div class="select-bg">
                        {{ form_widget(form.branche)}}
                        {{ form_errors(form.branche) }}
                    </div>
                </div>
            </div>
            <div class="col-lg-8 col-md-6">
                <div class="form-group">
                    <label>{{form_label(form.domaine)}}</label>
                    <div class="select-bg">
                        {{form_widget(form.domaine)}}
                        {{ form_errors(form.domaine) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{{ form_widget(form) }}
<div class="add-crdt-amnt text-right">
    <button class="setting-save-btn" type="submit">{{ button_label|default('form.btnSave'|trans) }}</button>
</div>
{{ form_end(form) }}
